# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/uber-clone

# JWT Secret Keys (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Geospatial Configuration
SEARCH_RADIUS_KM=5
ZONE_PRECISION=6

# Fare Configuration (per km)
BIKE_RATE_PER_KM=10
AUTO_RATE_PER_KM=15
CAB_RATE_PER_KM=20
BASE_FARE=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Admin API Key (REQUIRED for production - protects admin endpoints)
# Generate a strong random key: openssl rand -hex 32
ADMIN_API_KEY=your-admin-api-key-here

# Allowed Origins (comma-separated list for CORS)
# Leave empty for defaults, or specify your domains
ALLOWED_ORIGINS=https://your-app.com,https://admin.your-app.com

# Rate Limiting Configuration
# General API: requests per minute
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Auth endpoints: stricter limits (per 15 minutes)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# OTP endpoints: very strict (per minute)
OTP_RATE_LIMIT_WINDOW_MS=60000
OTP_RATE_LIMIT_MAX_REQUESTS=3

# Admin endpoints: moderate limits
ADMIN_RATE_LIMIT_WINDOW_MS=60000
ADMIN_RATE_LIMIT_MAX_REQUESTS=50
